<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="5dp" >

    <ImageView
        android:id="@+id/teamlist_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/imgcontentstring"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/teamlist_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/teamlist_item_img"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/teamlist_item_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamlist_item_name"
        android:layout_toRightOf="@id/teamlist_item_img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="1dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/teamlist_item_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/teamlist_item_name"
        android:layout_marginLeft="50dp"
        android:lineSpacingExtra="1dp"
        android:textColor="#EE82EE"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/teamlist_item_abstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamlist_item_img"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="1dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/teamlist_item_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamlist_item_abstract"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="1dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/teamlist_item_need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamlist_item_leader"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="1dp"
        android:textSize="14sp" />

</RelativeLayout>