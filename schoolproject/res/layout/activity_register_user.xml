<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    
    <RelativeLayout
        android:id="@+id/register1_lv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:background="@drawable/alltitle2" >

        <Button
            android:id="@+id/register111_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/wm_back2"
            android:onClick="btOnclick" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/register1_lv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register1_lv_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/register1_tx_name"
            android:layout_marginTop="3dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户名"
            android:textColor="#a0a0a0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register1_userid"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:numeric="integer"
            android:paddingLeft="10dp"
            android:phoneNumber="true"
            android:selectAllOnFocus="true"
            android:background="@drawable/teaminput"
            android:textColor="#a9a9a9"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register1_lv_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register1_lv_user_name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/register1_tx_pwd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:text="密   码"
            android:textColor="#a0a0a0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register1_pwd"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请设置密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:numeric="integer"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="true"
            android:background="@drawable/teaminput"
            android:textColor="#a9a9a9"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register1_lv_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register1_lv_pwd"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/register1_tx_pwd_again"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="密  码"
            android:layout_marginTop="3dp"
            android:textColor="#a0a0a0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register1_pwd_again"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="再次输入密码"
            android:imeOptions="actionDone"
            android:background="@drawable/teaminput"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="true"
            android:textColor="#a9a9a9"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register1_upload"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/register1_lv_pwd_again"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:alpha="0.8"
        android:background="#E5E5E5"
        android:gravity="center"
        android:onClick="btOnclick"
        android:text="确认注册"
        android:textColor="#E9C194"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:text="温馨提示：注册过程中遇到任何问题，请联系官方邮箱13898624331@163.com～"
        android:textColor="#FFCC33"
        android:textSize="12sp" />
    
</RelativeLayout>