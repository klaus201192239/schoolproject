<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/updatesys_lv_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/sowtupdate" >

        <Button
            android:id="@+id/updatesys_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/wm_back2"
            android:onClick="btonclick" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/updatesys_rv_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatesys_lv_one"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/updatesys_img_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/imgcontentstring"
            android:scaleType="fitXY"
            android:src="@drawable/showme" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/updatesys_rv_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatesys_rv_one"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/sysupdateaa"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:text="当前版本："
            android:textColor="#312F2D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/upload_sys_now"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/sysupdateaa"
            android:textColor="#a9a9a9"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/updatesys_rv_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatesys_rv_two"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/sysupdatebb"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:text="最新版本："
            android:textColor="#312F2D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/upload_sys_new"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/sysupdatebb"
            android:textColor="#a9a9a9"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/updatesys_rv_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatesys_rv_three"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/sysupdatecc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:text="升级好处："
            android:textColor="#312F2D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/upload_sys_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/sysupdatecc"
            android:textColor="#a9a9a9"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/updatesys_tablerow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatesys_rv_four"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/updatesys_change"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="-6dp"
            android:alpha="0.8"
            android:background="#E5E5E5"
            android:onClick="btonclick"
            android:text="确定升级"
            android:textColor="#FFCC33"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:text="温馨提示：如果因为意外情况，本系统无法更新，请到安卓应用市场下载本软件～"
        android:textColor="#FFCC33"
        android:textSize="12sp" />

</RelativeLayout>