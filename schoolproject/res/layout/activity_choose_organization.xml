<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    
    <RelativeLayout
        android:id="@+id/chooseorg_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/acmana" >

        <Button
            android:id="@+id/chooseorg_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/wm_back2"
            android:onClick="btonclik"/>
    </RelativeLayout>
    
    
    
    <ListView
        android:id="@+id/chooseorg_Listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:divider="#EFEFEF"
        android:dividerHeight="5dp"       
        android:layout_below="@id/chooseorg_title" />

</RelativeLayout>