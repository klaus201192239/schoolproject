<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/getpwdback_lv_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/chpwd" >

        <Button
            android:id="@+id/getpwdback_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/wm_back2"
            android:onClick="btonclick" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/getpwdback_rv_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="手机号码"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/getpwdback_oldpwd"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="与注册时的手机号码一致"
            android:inputType="phone"
            android:textColor="#E1E1E1"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getpwdback_oldpwd"
            android:background="#FFFFFF"
            android:contentDescription="@string/imgcontentstring"
            android:src="@drawable/line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/getpwdback_rv_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/getpwdback_rv_two"
        android:gravity="center" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="邮箱地址"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/getpwdback_newpwd"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_weight="10"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="与注册时的邮箱地址一致"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textColor="#E1E1E1"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getpwdback_newpwd"
            android:background="#FFFFFF"
            android:contentDescription="@string/imgcontentstring"
            android:src="@drawable/line" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/getpwdback_tablerow"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/getpwdback_rv_three"
        android:layout_marginTop="20dp"
        android:gravity="center" >


        <Button
            android:id="@+id/getpwdback_change"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="-6dp"
            android:alpha="0.8"
            android:background="#E5E5E5"
            android:onClick="btonclick"
            android:text="找回密码"
            android:textColor="#E9C194"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:text="温馨提示：确保填写的邮箱、电话号码与当初注册时的信息一致，并到您的邮箱中查看找回的密码～"
        android:textColor="#FFCC33"
        android:textSize="12sp" />
    
</RelativeLayout>