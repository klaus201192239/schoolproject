<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/managenotice_lv_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/qunfanotice" >

        <Button
            android:id="@+id/managenotice_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/wm_back2"
            android:onClick="btonclik" />
    </RelativeLayout>

    <TextView
        android:id="@+id/managenotice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/managenotice_lv_one"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#FFCC33"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/managenotice_lv_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/managenotice_title"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/managenotice_tvone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"          
            android:text="通知标题"
            android:textColor="#a9a9a9"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/managenotice_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@id/managenotice_tvone"
            android:layout_toRightOf="@id/managenotice_tvone"
            android:background="@drawable/noticeinput"
            android:gravity="center"
            android:hint="请输入标题(不超过12个字符)"
            android:textColor="#a9a9a9"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/managenotice_content_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/managenotice_lv_three"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:text="通知具体内容："
        android:textColor="#a9a9a9"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/managenotice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/managenotice_content_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/noticeinput"
        android:hint="  请输入通知内容"
        android:paddingBottom="2dp"
        android:textColor="#a9a9a9" 
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/managenotice_upload"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/managenotice_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:onClick="btonclik"
        android:scaleType="fitXY"
        android:src="@drawable/noticefinisah"
        android:contentDescription="@string/imgcontentstring" />

</RelativeLayout>