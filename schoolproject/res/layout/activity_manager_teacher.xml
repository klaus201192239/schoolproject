<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/manateacher_lv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/acmana" >

        <Button
            android:id="@+id/manateacher_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/wm_back2"
            android:onClick="btonclick" />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/manateacher_rv_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manateacher_lv_title"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/manateacher_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/imgcontentstring"
            android:scaleType="fitXY" 
            android:src="@drawable/showme"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/manateacher_rv_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manateacher_rv_one"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:text="请使用社团管理网站账号登录，非学生使用"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/manateacher_rv_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/manateacher_rv_two"
        android:gravity="center" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="账  号"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/manateacher_userid"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:hint="社 团 管理 网 站 的 账 号"
            android:imeOptions="actionDone"
            
            android:selectAllOnFocus="true"
            android:textColor="#E1E1E1"
            android:textSize="15sp" />
        
         <ImageView
            android:layout_below="@+id/manateacher_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imgcontentstring"
            android:background="#FFFFFF"
            android:src="@drawable/line" />
         
    </RelativeLayout>
    
  
    <RelativeLayout
        android:id="@+id/manateacher_rv_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manateacher_rv_three"
        android:gravity="center" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
             android:text="密   码"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/manateacher_pwd"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:selectAllOnFocus="true"
            android:textColor="#E1E1E1"
            android:textSize="15sp" />
        
         <ImageView
            android:layout_below="@+id/manateacher_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imgcontentstring"
            android:background="#FFFFFF"
            android:src="@drawable/line" />
         
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/manateacher_rv_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manateacher_rv_four"
        android:layout_marginTop="20dp" >
        
         <Button
            android:id="@+id/manateacher_login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="6dp"
            android:alpha="0.8"
            android:onClick="btonclick"
            android:text="临时登录"
            android:textColor="#CC9933"
            android:textSize="16sp" />
        
    </RelativeLayout>

</RelativeLayout>