<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp" >

    
    <RelativeLayout
        android:id="@+id/memeber1_headinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <ImageView
            android:id="@+id/memeber1_imghead"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/imgcontentstring"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/memeber1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/memeber1_imghead"
            android:textColor="#4D4D4D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/memeber1_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/memeber1_name"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/memeber1_imghead"
            android:textColor="#a9a9a9"
            android:textSize="15sp" />
    </RelativeLayout>
    
     <TextView
        android:id="@+id/memeber1_hisTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/memeber1_headinfo"
        android:layout_marginTop="3dp"
        android:textColor="#a9a9a9"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/memeber1_abstract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/memeber1_hisTel"
        android:layout_marginTop="3dp"
        android:textColor="#a9a9a9"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/memeber1_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/memeber1_abstract"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="#a9a9a9"
        android:textSize="15sp" />

</RelativeLayout>